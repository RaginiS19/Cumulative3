@model CumulativeProject.Models.Teacher

@{
    ViewData["Title"] = "Edit Teacher";
}

<h2 class="mb-4">Edit Teacher</h2>

<!-- Success Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="Update" method="post" class="col-md-6 mx-auto">
    <input type="hidden" asp-for="TeacherId" />

    <div class="form-group mb-3">
        <label asp-for="TeacherFName" class="form-label">First Name</label>
        <input asp-for="TeacherFName" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="TeacherLName" class="form-label">Last Name</label>
        <input asp-for="TeacherLName" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="EmployeeNumber" class="form-label">Employee Number</label>
        <input asp-for="EmployeeNumber" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="HireDate" class="form-label">Hire Date</label>
        <input asp-for="HireDate" type="date" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Salary" class="form-label">Salary</label>
        <input asp-for="Salary" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Edit" asp-route-id="@Model.TeacherId" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
